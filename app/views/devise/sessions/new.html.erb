            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %> Recordarme
              </label>
            </div>
          <% end -%>

          <%= f.submit 'Ingresar', class:'btn btn-primary' %>
        <% end %>
        <br>
        <br>
      </div>
      <div class="form">

      </div>
      <div class="cta">
        <%= render 'devise/shared/links' %>
