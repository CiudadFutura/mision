<%= form_for @pack, :html => { :multipart => true, :class => 'form-horizontal pack' } do |f| %>

    <% if @pack.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@pack.errors.count, 'error') %> El pack no pudo ser guardado:</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @pack.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <div class="control-group">
      <%= f.label :picture, :class => 'control-label' %>
      <div class="controls">
        <%= f.file_field :picture %>
      </div>
      <%= error_span(@pack[:picture]) %>
    </div>
    <div class="control-group">
      <%= f.label :price, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :price, :class => 'form-control' %>
      </div>
      <%= error_span(@pack[:price]) %>
    </div>
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <%= error_span(@pack[:name]) %>
    </div>
    <div class="control-group">
      <%= f.label :code, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :code, :class => 'form-control' %>
      </div>
      <%= error_span(@pack[:code]) %>
    </div>
    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :description, :class => 'form-control' %>
      </div>
      <%= error_span(@pack[:description]) %>
    </div>

    <div class="control-group">
      <%= f.label :active, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :active, :class => 'form-control' %>
      </div>
      <%= error_span(@pack[:active]) %>
    </div>

    <div class="control-group">
      <%= f.label :price_super, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :price_super, :class => 'form-control' %>
      </div>
      <%= error_span(@pack[:price_super]) %>
    </div>
    <div class="control-group">
      <%= f.label :amount_alloweb, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :amount_alloweb, :class => 'form-control' %>
      </div>
      <%= error_span(@pack[:amount_alloweb]) %>
    </div>

    <div class="control-group">
      <%= f.label :brand, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :brand, :class => 'form-control' %>
      </div>
      <%= error_span(@pack[:brand]) %>
    </div>

    <div class="control-group">
      <%= f.label :supplier_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.select(:supplier_id,
                     options_for_select(Supplier.all.map{|s| [s.name,s.id]},@pack[:supplier_id]),
                     { include_blank: 'Elija proveedor'},
                     class: 'form-control') %>
      </div>
      <%= error_span(@pack[:supplier]) %>
    </div>


    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t('helpers.links.cancel')),
                packs_path, :class => 'btn btn-default' %>

<% end %>
