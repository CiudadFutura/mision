<div class="container fill">
  <div class="row">
    <h2>Lista de transacciones</h2>
    <div class="navbar navs-fixed">
      <%= link_to t('Crear Transacción', :default => t("helpers.links.new")),
                  new_transaction_path,
                  :class => 'btn btn-primary' if can? [:manage], Transaction
      %>
    </div>

		<table class="table table-striped">
		  <thead>
		    <tr>
		      <th>Cuenta N°</th>
		      <th>Pedido</th>
		      <th>Tipo de transacción</th>
		      <th>Monto</th>
		      <th>Descripción</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @transactions.each do |transaction| %>
		      <tr>
		        <td><%= transaction.account_id %></td>
		        <td><%= transaction.pedido_id %></td>
		        <td><%= transaction.transaction_type %></td>
		        <td><%= transaction.amount %></td>
		        <td><%= transaction.description %></td>
		        <td><%= link_to 'Ver', transaction, class: 'btn btn-default btn-xs' %></td>
		        <td><%= link_to 'Editar', edit_transaction_path(transaction), class: 'btn btn-default btn-xs' %></td>
		        <td><%= link_to 'Borrar', transaction, method: :delete, data: { confirm: 'Está seguro?' }, class: 'btn btn-default btn-xs' %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>

		<br>

	</div>
</div>
