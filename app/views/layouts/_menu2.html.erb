<!-- Collect the nav links, forms, and other content for toggling -->
<div class="collapse navbar-collapse" id="bs-megadropdown-tabs">
  <ul class="nav navbar-nav nav_1">
    <% @categorias_menu.each do |c| %>
      <% if c[:subcategorias].present? %>

        <li class="dropdown mega-dropdown active">
          <%= link_to '#', class: 'dropdown-toggle', title: '', data: { toggle: 'dropdown'} do %>
            <%= c[:nombre] %><span class="caret"></span>
          <% end %>
          <div class="dropdown-menu mega-dropdown-menu w3ls_vegetables_menu">
            <div class="w3ls_vegetables">
              <ul>
                <% c[:subcategorias].each do |sm| %>
                  <li>
                    <%= link_to sm[:nombre],
                                productos_path(categoria_id: c[:id], subcategoria_id: sm[:id]),
                                :class => ('active' if params[:subcategoria_id].to_i == sm[:id])
                    %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </li>

      <% else %>
        <li>
          <%= link_to productos_path(categoria_id: c[:id]) do %>
            <%= c[:nombre] %>
          <% end %>
        </li>

      <% end %>
    <% end %>
  </ul>
</div><!-- /.navbar-collapse -->