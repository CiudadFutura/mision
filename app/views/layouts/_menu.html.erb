<li>
  <%= link_to "Todos", productos_path, class:"nav-links" %>
</li>
<% @categorias_menu.each do |c| %>
  <% if c[:subcategorias].present? %>

    <li class="dropdown mega-dropdown">
      <%= link_to '#', class: 'dropdown-toggle nav-links', title: '', data: { toggle: 'dropdown'} do %>
        <%= c[:nombre] %><span class="caret"></span>
      <% end %>
      <div class="dropdown-menu mega-dropdown-menu w3ls_vegetables_menu">
        <div class="w3ls_vegetables">
          <ul>
            <% c[:subcategorias].each do |sm| %>
              <li>
                <%= link_to sm[:nombre],
                            productos_path(categoria_id: c[:id], subcategoria_id: sm[:id])
                %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </li>

  <% else %>
    <li>
      <%= link_to(productos_path(categoria_id: c[:id]), class:"nav-links") do %>
        <%= c[:nombre] %>
      <% end %>
    </li>

  <% end %>
<% end %>
