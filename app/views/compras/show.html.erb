<%= javascript_include_tag "compras", params[:controller] %>
<div class="container fill">
  <div class="breadcrumb">
    <%= link_to 'Modificar', edit_compra_path(@compra) %> |
    <%= link_to 'Atrás', compras_path %>
  </div>
  <div class="row text-center">
    <h2><%= @compra.nombre%></h2>
  </div>
	<br>
	<div class="row">

	</div>
  <div class="row">
		<div class="col-md-3">Total de círculos:<%= @statuses.count %></div>
    <div class="col-md-2">Total Círculos Agendados: <%= @statuses.select {|a| a['Agendado']}.count %></div>
    <div class="col-md-2">Total Círculos en Espera: <%= @statuses.select {|a| a['En espera']}.count %></div>
    <div class="col-md-2">Total Círculos en Asignados: <%= @statuses.select {|a| a['Asignado']}.count %></div>
    <div class="col-md-2">Total Círculos Completados: <%= @statuses.select {|a| a['Completo']}.count %></div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Circulos</h3>
    </div>
    <div class="panel-body">

      <div class="table-responsive">
        <%= render 'status' %>
      </div>
    </div>
    <div class="panel-footer"></div>
  </div>
</div>
<%= render 'layouts/modal' %>