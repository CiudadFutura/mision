<div id="divLoading">
  <div class="loading"></div>
</div>
<table class="table" id="statuses-table">
  <thead>
  </thead>
  <tr>
    <th>Círculo</th>
    <% Sector.all.each do |sector|%>
        <th><%= sector.name%></th>
    <% end %>
    <th>Puesto</th>
  </tr>
  <tbody>
    <% @circulos.each do |circulo , d| %>
      <%
        status_class = ''
        d[:sectors].each do |sector_id, sector|
          if sector_id == 6
            status_class = sector[:status].present? ? (Status.find(sector[:status]).name).split(' ').map{|s| s.downcase}.join('-') : 'inicial'
          end
        end
      %>
      <% disabled = true %>
        <tr class="<%= "estado_#{status_class}" %>">
          <td><%= circulo %></td>
          <% d[:sectors].each do |sector_id, sector| %>
              <td>
                <% if status_class == 'asignado'
                     disabled = false
                   end %>
                <% if sector_id == 6 %>
                    <%  status = d[:sectors].to_a.last %>
                    <%= select_tag :status_is,
                                   options_for_select(Status.all.map{|s| [s.name,s.id]},status[1][:status]),
                                   include_blank: 'Elija Estado',
                                   data: {
                                       sector_id: sector_id,
                                       delivery_id: d[:delivery_id],
                                       compra_id: @compra.id,
                                       status_id: sector[:status]
                                   },
                                   class: 'select-statuses'%>
                <% else %>
                    <%= check_box_tag 'status_id', sector_id,
                                      sector[:status],
                                      data: {
                                          sector_id: sector_id,
                                          delivery_id: d[:delivery_id],
                                          compra_id: @compra.id,
                                          status_id: sector[:status]

                                      },
                                      disabled: disabled,
                                      remote: true,
                                      class: 'input-large' %>
                <% end %>

              </td>

          <% end %>
          <td><%= link_to '#',
                          class: 'checkpointEditable editable checkpoint editable-disabled',
                          data: { pk: d[:delivery_id],
                                  type: 'text',
                                  title: 'Ingrese el Nº de puesto',
                                  url: delivery_path(d[:delivery_id]),
                                  name: 'checkpoint',
                                  value: d[:checkpoint]
                          } do %>
                <%= d.try(:checkpoint)  %>
            <% end %>
          </td>
        </tr>
    <% end%>
  </tbody>
</table>