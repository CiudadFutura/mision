<h1>Lista de Proveedores</h1>

<%= link_to 'Crear Proveedor', new_supplier_path, class: 'btn btn-primary' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Direcci√≥n</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.address %></td>
        <td><%= supplier.nature %></td>
        <td><%= link_to 'Show', supplier, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier), class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

