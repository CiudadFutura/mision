<%- model_class = Pedido -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div class="row">
  <table class='table table-striped'>
    <thead>
      <tr>
        <td>Numero</td>
        <td>Fecha</td>
        <td>Ciclo</td>
        <td>Coordinador</td>
        <td>Productos</td>
      </tr>
    </thead>
    <tbody>
    <% @pedidos.each do |p| %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.created_at %></td>
        <td><%= p.ciclo.nombre %></td>
        <td><%= p.circulo.coordinador.nombre %></td>
        <td>
          <ul>
          <% JSON.parse(p.items).each do |i| %>
            <li><%= Producto.find(i['producto_id']).nombre %></li>
          <% end %>
          </ul>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

