<div class="container fill">
  <div class="row">
		<h2>Lista de cuentas</h2>
    <div class="navbar navs-fixed">
      <%= link_to t('Crear Cuenta', :default => t("helpers.links.new")),
                  new_account_path,
                  :class => 'btn btn-primary' if can? [:manage], Account
      %>
    </div>

		<table class="table table-striped">
		  <thead>
		    <tr>
		      <th>Usuario</th>
		      <th>Estado</th>
		      <th>Balance</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @accounts.each do |account| %>
		      <tr>
		        <td><%= account.usuario.nombre_completo %></td>
		        <td><%= account.status ? 'Activa' : 'Inactiva' %></td>
		        <td><%= number_to_currency(account.total) %></td>
		        <td><%= link_to 'Ver', account, class: 'btn btn-default btn-xs' %></td>
		        <td><%= link_to 'Editar', edit_account_path(account), class: 'btn btn-default btn-xs' %></td>
		        <td><%= link_to 'Borrar', account, method: :delete, data: { confirm: 'EstÃ¡ seguro?' }, class: 'btn btn-default btn-xs' %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>

		<br>

	</div>
</div>