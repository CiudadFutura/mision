<div class="container fill">
  <div class="row">
    <h2>Lista de estados</h2>
    <div class="navbar navs-fixed">
      <%= link_to t('Crear Estado', :default => t("helpers.links.new")),
                  new_status_path,
                  :class => 'btn btn-primary' if can? [:manage], Status
      %>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table">
      <thead>
      <tr>
        <th>Nombre</th>

        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @statuses.each do |status| %>
        <tr>
          <td><%= status.name %></td>

          <td><%= link_to 'Ver', status %></td>
          <td><%= link_to 'Editar', edit_status_path(status) %></td>
          <td><%= link_to 'Borrar', status, method: :delete, data: { confirm: 'EstÃ¡ seguro?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>
