upstream puma {
  server unix:///home/deploy/apps/appname/shared/tmp/sockets/appname-puma.sock;
}

server {
  listen 80 default_server deferred;
  # server_name example.com;

  root /home/deploy/apps/appname/current/public;
  access_log /home/deploy/apps/appname/current/log/nginx.access.log;
  error_log /home/deploy/apps/appname/current/log/nginx.error.log info;

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  try_files $uri/index.html $uri @puma;
  location @puma {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    proxy_pass http://puma;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 10M;
  keepalive_timeout 10;
}

server {
    listen *:80;
    server_name pruebas.misionantiinflacion.com.ar;
    server_tokens off; ## Don't show the nginx version number, a security best practice

#    root         /home/deploy/mision/current/public;

    return 301 https://pruebas.misionantiinflacion.com.ar:443$request_uri;

#       access_log  /var/log/nginx/misionantiinflacion_access.log misionantiinflacion_access;
#       error_log   /var/log/nginx/misionantiinflacion_error.log;
}

server {
  listen *:443 ssl;
   ## Strong SSL Security
    ssl on;
    ssl_certificate /etc/letsencrypt/live/pruebas.misionantiinflacion.com.ar/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/pruebas.misionantiinflacion.com.ar/privkey.pem;
    ## HSTS Config
    ## https://www.nginx.com/blog/http-strict-transport-security-hsts-and-nginx/
    add_header Strict-Transport-Security "max-age=31536000";
    ## If you use HTTPS make sure you disable gzip compression
    ## to be safe against BREACH attack.
    gzip off;
    ## Don't show the nginx version number, a security best practice
    server_tokens off;

    # separados por espacios
    server_name pruebas.misionantiinflacion.com.ar;
      ## Raiz del sitio web
      root         /home/deploy/mision/current/public;

      #passenger_enabled on;
      #rails_env    production;

      # redirect server error pages to the static page /50x.html
      error_page   500 502 503 504  /50x.html;
      location = /50x.html {
        root   html;
      }
}